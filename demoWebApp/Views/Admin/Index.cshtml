@model demoWebApp.Models.ViewBinding.AdminIndexView
@using MagenicMetrics
@{
    ViewData["Title"] = "Metrics";
    var metricList = Model.Metrics;
}
@if (Model == null)
{
    <h2>Validation Errors</h2>
    <p>@Html.ValidationSummary(false)</p>
}
else
{
    <h2>Page # @Model.PageNumber - @ViewBag.Count Records</h2>
    <form asp-page="/Admin/Index" method="get">
        <div class="form-actions no-color">
            <p>
                Application Name Filter: <input type="text" name="ApplicaitonFilter" value="@Model.ApplicationFilter" />
                Page No: <input type="number" name="PageNumber" value="@Model.PageNumber" />
                Page Size: <input type="number" name="PageSize" value="@Model.PageSize" />
                <input type="submit" value="Search" class="btn btn-default" />
            </p>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].MetricId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].Application)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].Details)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].ElpasedTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].ExceptionMessage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].RequestPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].Query)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].ResultCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].ResultCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].ServerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].TraceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Metrics[0].UserName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Metrics)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetricId)
                    </td>
                    <td>
                        @item.StartTime.ToString("yyyy-MM-dd HH:mm:ss.fff")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Application)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ElpasedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExceptionMessage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestPath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Query)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResultCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResultCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TraceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
