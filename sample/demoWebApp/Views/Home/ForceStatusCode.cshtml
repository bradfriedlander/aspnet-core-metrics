@model HomeForceStatusCode
@{
    ViewData["Title"] = "ForceStatusCode";
    var code = Model.Code;
}

<h2>ForceStatusCode</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<hr class="col-md-12" />
<div class="col-md-12">
    <form asp-action="ForceStatusCode" asp-controller="Home" method="post">
        <div class="form-actions">
            <div class="form-group col-md-3">
                <label asp-for="Code"></label>
                <input class="form-control" asp-for="Code" />
